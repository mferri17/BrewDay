@model IEnumerable<BrewDay.Domain.Entities.Stock>

@{
    ViewBag.Title = "Scorte";
    ViewBag.Page = "#nav-stocks";
}

<div class="container">
    <button type="button" class="btn btn-info btn-lg pull-right" data-toggle="modal" data-target="#myModal">?</button>

    <!-- Modale -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Contenuto del modale-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Gestione Scorte</h4>
                </div>
                <div class="modal-body">
                    <p>
                        Le Scorte sono da intendersi come il quantitativo di Ingredienti di cui si dispone per avviare produzioni.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Ho capito!</button>
                </div>
            </div>

        </div>
    </div>

</div>

<h2>Tutte le Scorte</h2>

<div class="row col-md-12">
    <a href="@Url.Action("Create")" class="btn btn-primary pull-right">Registra nuova Scorta</a>
</div>
<div class="row col-md-12">
    <table class="table table-hover">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(model => model.Ingredient.Type) </th>
                <th> @Html.DisplayNameFor(model => model.Ingredient.Name) </th>
                <th> @Html.DisplayNameFor(model => model.Quantity) </th>
                <th> @Html.DisplayNameFor(model => model.ExpireDate) </th>
                <th> @Html.DisplayNameFor(model => model.Note) </th>
                <th class="no-sort no-search"></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayEnumLabel(item.Ingredient.Type)</td>
                    <td>@Html.DisplayFor(modelItem => item.Ingredient.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Quantity)</td>
                    <td>@Html.DisplayFor(modelItem => item.ExpireDate)</td>
                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                    <td class="action-column">
                        <a href="@Url.Action("Details", new { id = item.StockId })"><span class="glyphicon glyphicon-search"></span> Dettagli</a>
                        <a href="@Url.Action("Edit", new { id = item.StockId })"><span class="glyphicon glyphicon-pencil"></span> Modifica</a>
                        <a href="@Url.Action("Delete", new { id = item.StockId })"><span class="glyphicon glyphicon-trash"></span> Elimina</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        $(".table").dataTable({
            language: { url: "/_wwwroot/vendor/datatables/Italian.json" },
            stateSave: true,
            responsive: false,
            colReorder: true,
            columnDefs: [
                //{ "targets": [5], "orderable": false },
                { "targets": "no-sort", "orderable": false },
                { "targets": "no-search", "searchable": false },
            ]
        });
    </script>
}
