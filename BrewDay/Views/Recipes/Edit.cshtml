@model BrewDay.Domain.Entities.Recipe

@{
    ViewBag.Title = $"Modifica {Model.Name}";
}

<h2>Modifica @Model.Name</h2>
<hr />


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ParentRecipeId)
    @Html.HiddenFor(model => model.RecipeId)

    <div class="form-group">
        @Html.LabelFor(model => model.ParentRecipeId, "Ricetta Padre", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.ParentRecipe.Name, new { htmlAttributes = new { @class = "form-control", @disabled = "" } })
        </div>
    </div>

    <div class="form-group required">
        @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextAreaFor(model => model.Description, new { @rows = 5, @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Note, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            @Html.TextAreaFor(model => model.Note, new { @rows = 5, @class = "form-control" } )
            @Html.ValidationMessageFor(model => model.Note, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.FermentationTemperature, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            <div class="input-group">
                <div class="input-group-addon"> °C </div>
                @Html.EditorFor(model => model.FermentationTemperature, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.FermentationTemperature, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group required">
        @Html.LabelFor(model => model.FermentationTime, htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-6">
            <div class="input-group">
                <div class="input-group-addon"> giorni </div>
                @Html.EditorFor(model => model.FermentationTime, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            @Html.ValidationMessageFor(model => model.FermentationTime, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Salva" class="btn btn-default btn-primary" />
        </div>
    </div>
</div>
}

<div class="row col-md-12">
    <a href="@Url.Action("Index")" class="btn btn-default pull-right">Torna alle ricette</a>
</div>
