@model IEnumerable<BrewDay.Domain.Entities.Recipe>

@{
    ViewBag.Title = "Tutte le Ricette";
    ViewBag.Page = "#nav-recipes";
}



<!-- Modale -->
<div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">

        <!-- Contenuto del modale-->
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">Gestione Ricette</h4>
            </div>
            <div class="modal-body">
                <p>
                    In questa pagina è possibile creare e gestire le Ricette. Premere su 'Dettagli' per creare la propria Ricetta personalizzata.
                </p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Ho capito!</button>
            </div>
        </div>

    </div>
</div>


<h2>
    @ViewBag.Title

    <button type="button" class="btn btn-info btn-lg pull-right" data-toggle="modal" data-target="#myModal">?</button>
</h2>

<div class="row col-md-12">
    <p><a href="@Url.Action("Create")" class="btn btn-primary pull-right">Registra nuova Ricetta</a></p>
</div>
<div class="row col-md-12">
    <table class="table table-hover table-bordered table-striped full-width">
        <thead>
            <tr>
                <th>Ricetta Padre</th>
                <th>@Html.DisplayNameFor(model => model.Name)</th>
                <th> @Html.DisplayNameFor(model => model.Description) </th>
                <th> @Html.DisplayNameFor(model => model.Note)</th>
                <th> @Html.DisplayNameFor(model => model.FermentationTemperature)</th>
                <th> @Html.DisplayNameFor(model => model.FermentationTime)</th>
                <th class="no-sort no-search"> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.ParentRecipe.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Name)</td>
                    <td>@Html.DisplayFor(modelItem => item.Description)</td>
                    <td>@Html.DisplayFor(modelItem => item.Note)</td>
                    <td>@Html.DisplayFor(modelItem => item.FermentationTemperature)</td>
                    <td>@Html.DisplayFor(modelItem => item.FermentationTime)</td>
                    <td class="action-column">
                        <a href="@Url.Action("Details", new { id = item.RecipeId })"><span class="glyphicon glyphicon-search"></span> Dettagli</a>
                        <a href="@Url.Action("Edit", new { id = item.RecipeId })"><span class="glyphicon glyphicon-pencil"></span> Modifica</a>
                        <a href="@Url.Action("Delete", new { id = item.RecipeId })"><span class="glyphicon glyphicon-trash"></span> Elimina</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        $(".table").DataTable({
            language: { url: "/_wwwroot/vendor/datatables/Italian.json" },
            stateSave: true,
            responsive: true,
            colReorder: true,
            columnDefs: [
                { "targets": "no-sort", "orderable": false },
                { "targets": "no-search", "searchable": false },
            ]
        });
    </script>
}
