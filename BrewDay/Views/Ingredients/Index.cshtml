@model IEnumerable<BrewDay.Domain.Entities.Ingredient>

@{
    ViewBag.Title = "Tutti gli Ingredienti";
    ViewBag.Page = "#nav-ingredients";
}

<div class="container">
    <button type="button" class="btn btn-info btn-lg pull-right" data-toggle="modal" data-target="#myModal">?</button>

    <!-- Modale -->
    <div class="modal fade" id="myModal" role="dialog">
        <div class="modal-dialog">

            <!-- Contenuto del modale-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Gestione Ingredienti</h4>
                </div>
                <div class="modal-body">
                    <p>
                        Qui vengono gestiti i quattro Ingredienti di base che servono per produrre una Birra.

                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Ho capito!</button>
                </div>
            </div>

        </div>
    </div>

</div>

<h2>@ViewBag.Title</h2>

<div class="row col-md-12">
    <a href="@Url.Action("CreateOrEdit")" class="btn btn-primary pull-right">Registra nuovo Ingrediente</a>
</div>

<div class="row col-md-12">
    <table class="table table-hover table-bordered table-striped full-width">
        <thead>
            <tr>
                <th> @Html.DisplayNameFor(model => model.Type) </th>
                <th> @Html.DisplayNameFor(model => model.Name) </th>
                <th> @Html.DisplayNameFor(model => model.Price) </th>
                <th> @Html.DisplayNameFor(model => model.Description) </th>
                <th class="no-sort no-search"> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td> @Html.DisplayEnumLabel(item.Type) </td>
                    <td> @Html.DisplayFor(modelItem => item.Name) </td>
                    <td class="text-right"> @Html.DisplayFor(modelItem => item.Price) </td>
                    <td> @Html.DisplayFor(modelItem => item.Description) </td>
                    <td class="action-column">
                        <a href="@Url.Action("Details", new { id = item.IngredientId })"><span class="glyphicon glyphicon-search"></span> Dettagli</a>
                        <a href="@Url.Action("CreateOrEdit", new { id = item.IngredientId })"><span class="glyphicon glyphicon-pencil"></span> Modifica</a>
                        <a href="@Url.Action("Delete", new { id = item.IngredientId })"><span class="glyphicon glyphicon-trash"></span> Elimina</a>
                        <a href="@Url.Action("Create", "Stocks", new { ingredientId = item.IngredientId })"><span class="glyphicon glyphicon-plus" data-toggle="tooltip" title="Aggiungimi alle Scorte!"></span> Stock</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section scripts{
    <script>
        $(".table").DataTable({
            language: { url: "/_wwwroot/vendor/datatables/Italian.json" },
            stateSave: true,
            responsive: true,
            colReorder: true,
            columnDefs: [
                //{ "targets": [5], "orderable": false },
                { "targets": "no-sort", "orderable": false },
                { "targets": "no-search", "searchable": false },
            ]
        });
    </script>

    <script>
        $(document).ready(function () {
            $('[data-toggle="tooltip"]').tooltip();
        });
    </script>

}
